
<div class="container my-4" style="width: 25rem;">
  <h1>Edit Order Status</h1>
  <%=form_for (@order) do |form| %>
    <% if  @order.errors.any? %>
      <ul>
        <% @order.errors.full_messages.each do |msg| %>
         <li>
           <%= msg %>
         </li>
        <% end %>
      </ul>
    <% end %>
    <div class="mb-3">
    <h4>Order # <%=@order.id%> </h4>
    </div>
    <div class="mb-3">
      <%= form.label :status %><br>
      <%= form.select :change_status, Order.statuses, :selected =>params[:change_status]%>
    </div>
    <div>
      <%= form.submit "Update", class: "btn btn-primary"  %>
    </div>
  <% end %>
  <%=link_to "Back to pervious page",orders_path%>
</div>
